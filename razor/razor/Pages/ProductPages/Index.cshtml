@page
@model razor.Pages.ProductPages.IndexModel

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>
@{
	if (TempData.Peek("Message") != null)
	{
		<h3 class="alert alert-success">Message: @TempData.Peek("Message")</h3>
		TempData.Clear();
	}
}
<p>
	<a asp-page="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-striped">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Product[0].ProductName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Product[0].Price)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Product[0].Qty)
			</th>
			<th>
				Edit
			</th>
			<th>
				Details
			</th>
			<th>
				Delete
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Product)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.ProductName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Price)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Qty)
				</td>
				<td>
					<a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-info mx-2">Edit</a>
				</td>
				<td>
					<a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-warning mx-2">Details</a>
				</td>
				<td>
					<a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
